@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    <div class="row">
        <div class="col-8">
            <h1 class="font-weight-bold">Added Categories</h1>
        </div>
        <div class="col-4">
            <a asp-controller="Category" asp-action="Add" class="btn btn-outline-primary">Add New Category</a>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Name</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>
                            <a asp-route-Id = "@obj.Id" asp-controller="Category" asp-action="Edit" class="btn btn-sm btn-secondary">Edit</a>
                            <a asp-route-Id = "@obj.Id" asp-controller="Category" asp-action="Delete" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>

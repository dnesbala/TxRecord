@model TxRecord.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container-fluid">
    <form method="POST" asp-action="DeleteCategory">
        @* To pass an ID in the HttpPost of DeleteCategory*@
        <input asp-for="Id" hidden />
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" class="form-control" disabled />
        </div>
        @if(Model.Image != null)
        {
        <div class="form-group">
            <label asp-for="Image">Image</label>
            <img src="@Model.Image" alt="@Model.Name" />
        </div>
        }
    <div class="row">
        <a asp-action="Index" class="btn btn-secondary mr-3">Back</a>
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Delete Transaction</button>
    </div>
    </form>
</div>

@section scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}